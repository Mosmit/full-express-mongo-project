<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>mosmit news page</title>

    <link rel="stylesheet" href="/style-news.css">
</head>
<body>
    <header class="header">
        <div class="header__logo">Mosmit News</div>
        <div class="header__search">
            <form action="/news" method="POST">
                <input type="text" name="search" placeholder="Search For News" required>
                <input type="submit" value="Search">
            </form>
        </div>
    </header>
    <div class="wrapper">
        <div class="news">
            <% if(articles != null) {%>
            <% articles.forEach(function(article, index){ %>
                <a href="/news/<%- article.id %>" class="news__card">
                    <img src="<%- article.thumbnail_url %>" alt="<%- article.title.rendered %>" >
                  <h2><%- article.title.rendered %></h2>
                  <p>
                    <%- article.excerpt.rendered %>
                  </p>  
                </a>  
            <% }) %>
            <% } else { %>
                No Post Found on The Mosmit site
            <% } %>
        </div>
    </div>
    

</body>
</html>