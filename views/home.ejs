    <script>

        const spa = document.getElementById("spa");

        function sumadd(start, end){
            let sum = 0;
            for (let i = start; i <= end; i++){
                sum += i;
            }
            return sum;
        }
        spa.textContent = ` this ${sumadd(1, 5)} precocoios`;
